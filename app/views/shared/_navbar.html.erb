<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
    <%= image_tag "https://image.flaticon.com/icons/svg/158/158126.svg" %>
  <% end %>
  <div class="nav-title">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <h1>The Lord of the Rent</h1>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <div class="nav-action-link">
        <li class="nav-item">
          <%= link_to new_warrior_path, class: "nav-item-logo nav-link" do %>
            <div>
              <%= image_tag "https://image.flaticon.com/icons/svg/10/10747.svg" %> Add a warrior
            </div>
          <% end %>
        </li>
      </div>
      <% if current_user.nil? %>
        <li class="nav-item log">
          <%= link_to "Sign-up", new_user_registration_path, class: "nav-link btn-primary text-white rounded" %>
        </li>
        <li class="nav-item log" id="btn-log-in">
          <%= link_to "Log-in", new_user_session_path, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item nav-item-logo dropdown nav-link">
          <div class="vatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://image.flaticon.com/icons/svg/10/10652.svg" %> War chief
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My bookings", owner_bookings_path, class: "dropdown-item" %>
            <%= link_to "My warriors", owner_warriors_path, class: "dropdown-item" %>
            <%= link_to "Log-out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item">
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
