<h1>Find a warrior</h1>
<div class='warriors-index'>
  <div class="cards-grid">
    <% @warriors.each do |warrior| %>
      <%= link_to warrior_path(warrior) do %>
      <div class="card-warrior-index">
        <%= cl_image_tag warrior.photo, crop: :fill, class: 'card-warrior-index-img'%>
      <div class="card-warrior-index-infos">
        <div>
          <h3><%= warrior.nickname %></h3>
          <p><%= warrior.race %></p>
        </div>
      <h3 class="card-warrior-index-pricing"><%= warrior.price %>â‚¬</h3>
      </div>
      </div>
    <% end %>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 80vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
