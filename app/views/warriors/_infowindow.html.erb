<div class="wrapper">
  <div class="content">
    <div class="top" style="background-image: url('<%= cl_image_path warrior.photo, height: 300, width: 400, crop: :fill %>')"></div>
    <div class="bottom">
      <div class="left">
        <div class="details">
          <h6><%= warrior.nickname %></h6>
          <p><%= warrior.price %> â‚¬ per day</p>
        </div>
        <%= link_to new_warrior_booking_path(warrior) do %>
