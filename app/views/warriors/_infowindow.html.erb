      <table>
        <tr>
          <th>Species</th>
          <th>Specialty</th>
        </tr>
        <tr>
          <td><%= warrior.race %></td>
          <td><%= warrior.specialty %></td>
        </tr>
        <tr>
          <th>Weapon</th>
          <th><%= link_to "Full details", warrior_path(warrior), class:"btn btn-info" %></th>
        </tr>
        <tr>
          <td><%= warrior.weapon %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
