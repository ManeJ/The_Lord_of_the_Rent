<h1 class="text-center"> My reservations </h1>
<div class="d-flex justify-content-center">
  <ul>
    <% if policy(Booking).display_resa? %>
      <% @bookings.each do |booking| %>
      <div class="card-product">
        <%= cl_image_tag booking.warrior.photo %>
        <div class="card-product-infos d-flex justify-content-between">
          <div>
            <h2><%= booking.warrior.nickname %></h2>
            <p>
              <% if booking.start_date == booking.end_date %>
                Booked for a mission on <%= booking.start_date.strftime("%b. %e, %Y") %>
              <% else %>
                Booked from <%= booking.start_date.strftime("%b. %e, %Y") %> to <%= booking.end_date.strftime("%b. %e, %Y") %>
              <% end %>
            </p>
          </div>
          <div class="d-flex align-items-center">
            <%= link_to "See booking details", warrior_booking_path(booking.warrior, booking), class: "btn btn-primary mr-3" %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </ul>
</div>

